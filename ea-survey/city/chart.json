{
  "title": "EA saturation - cities",
  "width": 1000,
  "height": 750,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "../data/all-countries.json",
        "type": "topojson"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "../data/all-cities.json"
      },
      "mark": {
        "type": "circle"
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "value",
          "type": "quantitative",
          "scale": {"type": "sqrt"}
        },
        "tooltip": [
          {
            "field": "formatted_address",
            "title": "city",
            "type": "nominal"
          },
          {
            "field": "value",
            "type": "quantitative",
            "title": "Number of EA"
          }
        ]
      }
    }
  ]
}
