{
  "title": "EA cities - Australia",
  "width": 1000,
  "height": 750,
  "projection": {"type": "mercator", "clipExtent": [[0, 0], [1000, 750]]},
  "layer": [
    {
      "data": {
        "url": "../data/all-countries.json",
        "type": "topojson"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "../data/all-cities.json"
      },
      "mark": {
        "type": "circle"
      },
      "transform": [
        {
          "filter": "datum.longitude < 180 && datum.longitude > 23 && datum.latitude < -5 && datum.latitude > -55"
        }
      ],
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "opacity": {
          "value": "0.4"
        },
        "size": {
          "field": "value",
          "type": "quantitative",
          "scale": {
            "domain": [0, 200],
            "range": [0, 4000]
          }
        },
        "tooltip": [
          {
            "field": "formatted_address",
            "title": "city",
            "type": "nominal"
          },
          {
            "field": "value",
            "type": "quantitative",
            "title": "Number of EA"
          }
        ]
      }
    }
  ]
}
