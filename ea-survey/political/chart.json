{
  "title": "Donation per political identity",
  "width": 300,
  "height": 500,
  "data": {
    "url": "../data/political.csv",
    "format": {
      "parse": {
        "donate_2017_c": "number"
      }
    }
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "field": "donate_2017_c",
          "as": "Count"
        },
        {
          "op": "mean",
          "field": "donate_2017_c",
          "as": "Mean donation"
        },
        {
          "op": "sum",
          "field": "donate_2017_c",
          "as": "Total donated"
        }
      ],
      "groupby": ["politics"]
    },
    {"fold": ["Count", "Mean donation", "Total donated"]}
  ],
  "facet": {
    "column": {
      "field": "key",
      "type": "nominal",
      "axis": {
        "title": null
      }
    }
  },
  "spec": {
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "value",
        "type": "quantitative",
        "format": ".0f",
        "axis": {
          "title": null
        }
      },
      "y": {
        "field": "politics",
        "type": "nominal",
        "scale": {
          "domain": [
            "Libertarian",
            "Right",
            "Center right",
            "Center",
            "Center left",
            "Left",
            "NA",
            "Prefer not to answer",
            "Other"
          ]
        }
      }
    }
  },
  "resolve": {
    "scale": {
      "x": "independent"
    }
  }
}
